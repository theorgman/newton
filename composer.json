{
    "name": "theorgman/template-package-php81",
    "description": "A ready-to-use PHP package template specifically designed for PHP 8.1",
    "keywords": [
        "theorgman",
        "template"
    ],
    "homepage": "https://github.com/theorgman/template-package-php81",
    "license": "MIT",
    "authors": [
        {
            "name": "Damon Ghavami",
            "email": "damon@theorgman.nl",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "pestphp/pest": "^2.36"
    },
    "autoload": {
        "psr-4": {
            "Theorgman\\TemplatePackagePhp81\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Theorgman\\TemplatePackagePhp81\\Tests\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    }
}
